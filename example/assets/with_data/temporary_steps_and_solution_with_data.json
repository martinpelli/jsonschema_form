{
    "jsonSchema":{
      "type": "object",
      "title": "Temporary steps & solution",
      "required": [
        "temporaryRepair"
      ],
      "properties": {
        "temporaryRepair": {
          "enum": [
            "Yes",
            "No"
          ],
          "type": "string",
          "title": "Can a temporary repair be made?"
        }
      },
      "description": "If a temporary solution is possible, please outline your intended steps and time estimate.",
      "dependencies": {
        "laborSupport": {
          "oneOf": [
            {
              "properties": {
                "helpers": {
                  "type": "array",
