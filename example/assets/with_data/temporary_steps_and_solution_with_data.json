              "helperCount",
              "hoursPerHelper",
              "sourcing",
              "contactName",
              "contactPhone"
            ],
            "contactName": {
              "ui:placeholder": "Enter the name"
            },
            "contactPhone": {
              "ui:placeholder": "Enter the phone",
              "ui:options": {
                "inputType": "tel"
              }
            },
            "helperCount": {
              "ui:widget": "updown",
              "ui:placeholder": "0"
            },
            "hoursPerHelper": {
              "ui:widget": "updown",
              "ui:placeholder": "0"
            },
            "technicianType": {
              "ui:widget": "radio"
            },
            "technicianTrade": {
              "ui:widget": "select",
              "ui:placeholder": "Select options"
            }
          },
          "ui:options": {
            "addText": "+ Add Labor Support",
            "addable": true,
            "removable": true
          }
        },
        "ui:order": [
          "temporaryRepair",
          "repairSteps",
          "timeEstimate",
          "laborSupport",
          "helpers"
        ],
        "repairSteps": {
          "ui:widget": "textarea",
          "ui:options": {
            "rows": 3
          },
          "ui:placeholder": "Enter value"
        },
        "laborSupport": {
          "ui:widget": "radio"
        },
        "timeEstimate": {
          "ui:widget": "updown",
          "ui:placeholder": "Enter value"
        },
        "temporaryRepair": {
          "ui:widget": "radio"
        }
      },
      "formData": {
        "helpers": [],
