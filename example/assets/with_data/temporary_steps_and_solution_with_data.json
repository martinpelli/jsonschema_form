                    "type": "object",
                    "required": [
                      "technicianType"
                    ],
                    "properties": {
                      "technicianType": {
                        "enum": [
                          "Helper",
                          "Technician"
                        ],
                        "type": "string",
                        "title": "Technician Type"
                      }
                    },
                    "dependencies": {
                      "sourcing": {
                        "oneOf": [
                          {
                            "required": [
                              "contactName",
                              "contactPhone"
                            ],
                            "properties": {
                              "sourcing": {
                                "enum": [
                                  "I have a contact"
                                ]
                              },
                              "contactName": {
                                "type": "string",
                                "title": "Enter their name"
                              },
                              "contactPhone": {
                                "type": "string",
                                "title": "Enter their phone number"
                              }
                            }
                          },
                          {
                            "properties": {
                              "sourcing": {
                                "enum": [
                                  "I need you to source them"
                                ]
                              }
                            }
                          }
                        ]
                      },
                      "technicianType": {
                        "oneOf": [
                          {
                            "required": [
                              "helperCount",
                              "hoursPerHelper",
                              "sourcing"
                            ],
                            "properties": {
                              "sourcing": {
                                "enum": [
                                  "I have a contact",
                                  "I need you to source them"
                                ],
                                "type": "string",
                                "title": "How will you source them?"
                              },
                              "helperCount": {
                                "type": "integer",
                                "title": "How many Helpers do you need?",
                                "default": 0,
                                "minimum": 0
                              },
                              "hoursPerHelper": {
                                "type": "integer",
                                "title": "Number of hours per Helper",
                                "default": 0,
                                "minimum": 0
                              },
                              "technicianType": {
                                "enum": [
                                  "Helper"
                                ]
                              }
                            }
                          },
                          {
                            "required": [
                              "technicianTrade",
                              "helperCount",
                              "hoursPerHelper",
                              "sourcing"
                            ],
                            "properties": {
                              "sourcing": {
                                "enum": [
                                  "I have a contact",
                                  "I need you to source them"
                                ],
                                "type": "string",
                                "title": "How will you source them?"
                              },
                              "helperCount": {
                                "type": "integer",
                                "title": "How many Technicians do you need?",
                                "default": 0,
                                "minimum": 0
                              },
                              "hoursPerHelper": {
                                "type": "integer",
                                "title": "Number of hours per Technician",
                                "default": 0,
                                "minimum": 0
                              },
                              "technicianType": {
                                "enum": [
                                  "Technician"
                                ]
                              },
                              "technicianTrade": {
                                "enum": [
                                  "Electrician",
                                  "Plumber",
                                  "Carpenter",
                                  "Other"
                                ],
                                "type": "string",
                                "title": "Technician's Trade"
                              }
                            }
                          }
                        ]
                      }
                    }
                  },
                  "title": "Labor Support Details"
                },
                "laborSupport": {
                  "enum": [
                    "Yes"
                  ]
                }
              }
            },
            {
              "properties": {
                "laborSupport": {
                  "enum": [
                    "No"
                  ]
                }
              }
            }
          ]
        },
        "temporaryRepair": {
          "oneOf": [
            {
              "required": [
                "repairSteps",
                "timeEstimate",
                "laborSupport"
              ],
              "properties": {
                "repairSteps": {
                  "type": "string",
                  "title": "What are the steps needed to do the temporary repair?"
                },
                "laborSupport": {
                  "enum": [
                    "Yes",
                    "No"
                  ],
                  "type": "string",
                  "title": "Will you need labor support?",
                  "description": "(Such as a helper or another technician for the repair.)"
                },
                "timeEstimate": {
                  "type": "integer",
                  "title": "How many hours is the temporary repair going to take?",
                  "default": 1,
                  "minimum": 1
                },
                "temporaryRepair": {
                  "enum": [
                    "Yes"
                  ]
                }
              }
            },
            {
              "properties": {
                "temporaryRepair": {
                  "enum": [
                    "No"
                  ]
                }
              }
            }
          ]
        }
      }
    },
      "uiSchema": {
        "helpers": {
          "items": {
            "sourcing": {
